<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_vehicle_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textSize="20sp"
                tools:text="Name" />

            <TextView
                android:id="@+id/tv_vehicle_model"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/model" />

            <TextView
                android:id="@+id/tv_vehicle_class"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/starship_class" />

            <TextView
                android:id="@+id/tv_vehicle_manufacturer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/manufacturer" />

            <TextView
                android:id="@+id/tv_vehicle_cost_in_credits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                tools:text="@string/cost" />

            <TextView
                android:id="@+id/tv_vehicle_length"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                tools:text="@string/length_m" />

            <TextView
                android:id="@+id/tv_vehicle_crew"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/crew" />

            <TextView
                android:id="@+id/tv_vehicle_passengers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/passengers" />

            <TextView
                android:id="@+id/tv_vehicle_max_atmosphering_speed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                tools:text="@string/max_speed" />

            <TextView
                android:id="@+id/tv_vehicle_cargo_capacity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                tools:text="@string/cargo_capacity" />

            <TextView
                android:id="@+id/tv_vehicle_consumables"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/consumables" />
        </LinearLayout>
    </ScrollView>
</layout>