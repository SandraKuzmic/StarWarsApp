<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="android.sandra.com.starwarsapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- activities -->

        <activity android:name=".activity.HomeScreenActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.ListActivity"
            android:parentActivityName=".activity.HomeScreenActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.HomeScreenActivity" />
        </activity>

        <activity
            android:name=".activity.FilmActivity"
            android:label="Films"
            android:parentActivityName=".activity.ListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.ListActivity" />
        </activity>

        <activity
            android:name=".activity.PeopleActivity"
            android:label="People"
            android:parentActivityName=".activity.ListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.ListActivity" />
        </activity>

        <activity
            android:name=".activity.PlanetsActivity"
            android:label="Planets"
            android:parentActivityName=".activity.ListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.ListActivity" />
        </activity>

        <activity
            android:name=".activity.SpaceshipActivity"
            android:label="Spaceships"
            android:parentActivityName=".activity.ListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.ListActivity" />
        </activity>

        <activity
            android:name=".activity.VehicleActivity"
            android:label="Vehicle"
            android:parentActivityName=".activity.ListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.ListActivity" />
        </activity>

        <activity
            android:name=".activity.SpeciesActivity"
            android:label="Species"
            android:parentActivityName=".activity.ListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.ListActivity" />
        </activity>
    </application>

</manifest>